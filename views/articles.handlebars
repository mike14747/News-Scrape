{{> add_note_modal}}

{{#each dbArticle}}
<div class="border m-4">
    <h5 class="bg-dkgreen text-pale p-2"><i class="far fa-newspaper mr-2"></i>{{ title }}</h5>
    <div class="row">
        <div class="col-lg">
            <div class="p-2"><span class="small muted">Link:</span> <a href="{{ link }}" target="_blank">{{ link }}</a>
            </div>

            <div class="p-2 text-dkgreen"><span class="small muted">Source:</span> {{ website }} / <span
                    class="small muted">Date Scraped:</span> {{ moment date format="MMM DD, YYYY" }}
            </div>
            {{#if note}}
            <div class="p-4">
                <form>
                <div class="form-group text-left">
                    <label for="note_text" class="bg-ltgreen d-block p-2">This article's note:</label>
                    <textarea id="note_text" class="form-control" rows="3">{{note.text}}</textarea>
                </div>
                <input id="note_id" type="hidden" value="{{note._id}}">
                <button id="submit_note" type="submit" class="btn-sm btn-note">Update Note</button>
                <button id="delete_note" type="submit" class="btn-sm btn-delete">Delete Note</button>
            </form>
            </div>
            {{/if}}
        </div>
        <div class="col-auto ml-auto">
            <div class="text-right p-2">
                {{#unless note}}
                <button class="btn btn-note px-3 mx-2 add_note" value="{{ _id }}"><i
                        class="far fa-sticky-note mr-2"></i>Add
                    Note</button>
                {{/unless}}
            </div>
            <div class="text-right p-2">
                <button class="btn btn-delete px-3 mx-2 delete_article" value="{{ _id }}"><i
                        class="far fa-trash-alt mr-2"></i>Delete Article</button>
            </div>
        </div>
    </div>
</div>
{{/each}}